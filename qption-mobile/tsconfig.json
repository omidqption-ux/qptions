{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "moduleResolution": "bundler", // ðŸ‘ˆ important
    "customConditions": [
      "react-native"
    ], // ðŸ‘ˆ now valid
    "esModuleInterop": true, // for `import React from 'react'`
    "allowSyntheticDefaultImports": true, // also helps with default imports
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "app",
    "src",
    "src/types/global.d.ts",
    "global.d.ts"
  ]
}